<UserControl x:Class="CPC.POS.View.VendorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:addressControl="clr-namespace:CPCToolkitExt.AddressControl;assembly=CPCToolkitExt"
             xmlns:behavior="clr-namespace:CPC.Toolkit.Behavior"
             xmlns:comboBoxControl="clr-namespace:CPCToolkitExt.ComboBoxControl;assembly=CPCToolkitExt"
             xmlns:control="clr-namespace:Xceed.Wpf.Toolkit;assembly=WPFToolkit.Extended"
             xmlns:converter="clr-namespace:CPC.Converter"
             xmlns:cpcControl="clr-namespace:CPC.Control"
             xmlns:cpcTabControl="clr-namespace:CPCToolkitExt.OtherControl;assembly=CPCToolkitExt"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dataGridControl="clr-namespace:CPCToolkitExt.DataGridControl;assembly=CPCToolkitExt"
             xmlns:helper="clr-namespace:CPC.Helper"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:local="clr-namespace:CPC.POS"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:Microsoft_Windows_Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Luna"
             xmlns:s="clr-namespace:System;assembly=mscorlib"
             xmlns:textBoxControl="clr-namespace:CPCToolkitExt.TextBoxControl;assembly=CPCToolkitExt"
             x:Name="vendorView"
             Background="{DynamicResource UserControlBackground}"
             mc:Ignorable="d">
    <!--
        helper:ValidationHelper.IsEnabled="True"
        helper:ValidationHelper.IsValid="{Binding IsValid, Mode=OneWayToSource}"
    -->
    <UserControl.Resources>
        <!--  region Converter  -->
        <converter:IntegerToBooleanConverter x:Key="integerToBooleanConverter" />
        <converter:ComboxItemToTextConverter x:Key="comboxItemToTextConverter" />
        <converter:StringFormatConverter x:Key="stringFormatConverter" />
        <converter:BoolToVisibilityConverter x:Key="boolToVisibilityConverter" />
        <converter:BooleanToIntegerConverter x:Key="booleanToIntegerConverter" />
        <converter:EnumToBoolConverter x:Key="enumToBoolConverter" />
        <converter:EnumToCollapsedConverter x:Key="enumToCollapsedConverter" />
        <converter:StringToImageSourceConverter x:Key="stringToImageSourceConverter" />
        <converter:PermissionConverter x:Key="permissionConverter" />
        <!--  endregion Converter  -->
        <!--  ProductVendorRowDetailsTemplate  -->
        <DataTemplate x:Key="ProductVendorRowDetailsTemplate">
            <Grid x:Name="Layout1"
                  Margin="0"
                  VerticalAlignment="Top">
                <ScrollViewer x:Name="svRowDetailOTTemplate"
                              Width="Auto"
                              Height="Auto"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              VerticalScrollBarVisibility="Disabled">
                    <Grid x:Name="grdOTTemplate"
                          Height="Auto"
                          Background="{DynamicResource Datagrid_RowDetailTemplate_Background1}">
                        <Border x:Name="brdOTrTemplate"
                                Margin="15"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Background="{DynamicResource Datagrid_RowDetailTemplate_Background2}"
                                BorderBrush="{DynamicResource Datagrid_RowDetailTemplate_Border}"
                                BorderThickness="1">
                            <Grid x:Name="grdTemplateProductVendor"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="180" />
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="*"
                                                      MinWidth="150" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10" />
                                    <RowDefinition Height="25" />
                                    <RowDefinition Height="25" />
                                    <RowDefinition Height="50" />
                                    <RowDefinition Height="25" />
                                    <RowDefinition Height="25" />
                                    <RowDefinition Height="10" />
                                </Grid.RowDefinitions>
                                <!--
                                    <Image Grid.RowSpan="6"
                                    Width="120"
                                    Height="100"
                                    Margin="29,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Source="/POS;component/Image/Shoes.png"
                                    Stretch="Uniform" />
                                -->
                                <Grid x:Name="grdProductPhotoDefault"
                                      Grid.RowSpan="6"
                                      Width="120"
                                      Height="100"
                                      Margin="29,0,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Center">
                                    <!--  "Visibility" IsNew = True => empty image, show this image  -->
                                    <Rectangle x:Name="imgCustomer"
                                               Width="100"
                                               Height="100"
                                               Fill="{DynamicResource Product}"
                                               Visibility="{Binding PhotoDefault.IsNew, Converter={StaticResource boolToVisibilityConverter}, ConverterParameter=True}" />
                                    <!--  Visibility IsNew = False => has image in database, show this image  -->
                                    <Image x:Name="imgProductPhotoDefault"
                                           Width="100"
                                           Height="100"
                                           Source="{Binding PhotoDefault.ImagePath, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource stringToImageSourceConverter}}"
                                           Stretch="Fill"
                                           Visibility="{Binding PhotoDefault.IsNew, Converter={StaticResource boolToVisibilityConverter}, ConverterParameter=False}" />
                                </Grid>
                                <TextBlock x:Name="txtblTemplateItem"
                                           Grid.Row="1"
                                           Grid.Column="1"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Item:" />
                                <TextBlock x:Name="txtblBindingTemplateItem"
                                           Grid.Row="1"
                                           Grid.Column="2"
                                           Margin="0,0,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding Code, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplatePartNo"
                                           Grid.Row="1"
                                           Grid.Column="3"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Part #:" />
                                <TextBlock x:Name="txtblBindingTemplatePartNo"
                                           Grid.Row="1"
                                           Grid.Column="4"
                                           Margin="0,0,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding PartNumber, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplateAttribute"
                                           Grid.Row="2"
                                           Grid.Column="1"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Attribute:" />
                                <TextBlock x:Name="txtblBindingTemplateAttribute"
                                           Grid.Row="2"
                                           Grid.Column="2"
                                           Margin="0,0,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding Attribute, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplateSize"
                                           Grid.Row="2"
                                           Grid.Column="3"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Size:" />
                                <TextBlock x:Name="txtblBindingTemplateSize"
                                           Grid.Row="2"
                                           Grid.Column="4"
                                           Margin="0,0,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding Size, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplateDescription"
                                           Grid.Row="3"
                                           Grid.Column="1"
                                           Margin="0,5.861,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Description:" />
                                <TextBlock x:Name="txtblBindingTemplateDescription"
                                           Grid.Row="3"
                                           Grid.Column="2"
                                           Grid.ColumnSpan="3"
                                           Margin="0,5.861,0,0"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Top"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding Description, Mode=OneWay}"
                                           TextTrimming="WordEllipsis"
                                           TextWrapping="Wrap"
                                           d:LayoutOverrides="GridBox" />
                                <TextBlock x:Name="txtblTemplatePrice"
                                           Grid.Row="4"
                                           Grid.Column="1"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Price:" />
                                <TextBlock x:Name="txtblBindingTemplateCost"
                                           Grid.Row="4"
                                           Grid.Column="2"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding RegularPrice, Mode=OneWay, StringFormat={x:Static local:Define.CurrencyFormat}, ConverterCulture={x:Static local:Define.ConverterCulture}}" />
                                <TextBlock x:Name="txtblTemplateBaseUnit"
                                           Grid.Row="4"
                                           Grid.Column="3"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Base Unit:" />
                                <TextBlock x:Name="txtblBindingTemplateBaseUnit"
                                           Grid.Row="4"
                                           Grid.Column="4"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding UOMName, Mode=OneWay}" />
                                <TextBlock x:Name="txtblTemplateQuantity"
                                           Grid.Row="5"
                                           Grid.Column="1"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Quantity:" />
                                <TextBlock x:Name="txtblBindingTemplateQuantity"
                                           Grid.Row="5"
                                           Grid.Column="2"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding OnHandStore1, Mode=OneWay, StringFormat={x:Static local:Define.NumericFormat}, ConverterCulture={x:Static local:Define.ConverterCulture}}" />
                                <TextBlock x:Name="txtblTemplateTax"
                                           Grid.Row="5"
                                           Grid.Column="3"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="Tax:" />
                                <TextBlock x:Name="txtblBindingTemplateTax"
                                           Grid.Row="5"
                                           Grid.Column="4"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource Datagrid_RowDetailTemplate_Foreground}"
                                           Text="{Binding TaxCode, Mode=OneWay}" />
                            </Grid>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </DataTemplate>
        <behavior:BindingHelper x:Key="customFieldBindingHelper"
                                Data="{Binding Path=CustomFieldCollection}" />
        <s:Int32 x:Key="CustomMaxLength">50</s:Int32>
        <s:Int32 x:Key="CreditLineMaxLength">10</s:Int32>
    </UserControl.Resources>
    <Grid x:Name="grdLayout">
        <Rectangle x:Name="UserControl_Background_Image"
                   Fill="{DynamicResource UserControl_Background_Image}" />
        <control:BusyIndicator IsBusy="{Binding IsBusy}">
            <Grid x:Name="grdVendor">
                <!--
                    <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                -->
                <Grid x:Name="grdSearch" d:IsHidden="True">
                    <Grid.Visibility>
                        <Binding Path="IsSearchMode"
                                 Mode="OneWay"
                                 UpdateSourceTrigger="PropertyChanged">
                            <Binding.Converter>
                                <converter:BoolToVisibilityConverter FalseToVisibility="Collapsed" />
                            </Binding.Converter>
                        </Binding>
                    </Grid.Visibility>
                    <Grid x:Name="grdContentSearch"
                          Grid.Row="1"
                          Margin="0,0,15,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="87" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <GroupBox x:Name="gbSearch"
                                  Margin="10,10,0,0">
                            <GroupBox.Header>
                                <TextBlock x:Name="txtblSearch"
                                           Style="{DynamicResource GroupboxTextBlock}"
                                           Text="Tìm kiếm" />
                            </GroupBox.Header>
                            <Grid x:Name="grdgbSearch"
                                  Margin="0,4,0,0">
                                <Grid x:Name="grdgbContentSearch">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="25" />
                                        <RowDefinition Height="25" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <control:WatermarkTextBox x:Name="txtKeyword"
                                                              Margin="10,2"
                                                              VerticalContentAlignment="Center"
                                                              BorderBrush="{DynamicResource TextBoxCanlendarComboboxBorderBrush}"
                                                              Padding="24,0,2,0"
                                                              Text="{Binding FilterText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                              TextWrapping="NoWrap"
                                                              Watermark="Từ khóa">
                                        <control:WatermarkTextBox.InputBindings>
                                            <KeyBinding Key="Enter"
                                                        Command="{Binding SearchCommand}"
                                                        CommandParameter="{Binding Path=Text, ElementName=txtKeyword}" />
                                        </control:WatermarkTextBox.InputBindings>
                                        <i:Interaction.Behaviors>
                                            <behavior:AutoFocusBehavior />
                                        </i:Interaction.Behaviors>
                                    </control:WatermarkTextBox>
                                    <Rectangle x:Name="imgFind"
                                               Width="20"
                                               Margin="13,3,0,3"
                                               HorizontalAlignment="Left"
                                               Fill="{DynamicResource Find}" />
                                    <StackPanel x:Name="stkpCheckbox"
                                                Grid.Row="1"
                                                Margin="10,0,0,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Orientation="Horizontal">
                                        <CheckBox x:Name="cbAccountNo"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  Content="Mã"
                                                  IsChecked="{Binding SearchOption, ConverterParameter={x:Static local:SearchOptions.AccountNum}, Converter={StaticResource enumToBoolConverter}, UpdateSourceTrigger=PropertyChanged}" />
                                        <CheckBox x:Name="cbFirstName"
                                                  Margin="15,0,0,0"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  Content="Họ"
                                                  IsChecked="{Binding SearchOption, ConverterParameter={x:Static local:SearchOptions.FirstName}, Converter={StaticResource enumToBoolConverter}, UpdateSourceTrigger=PropertyChanged}" />
                                        <CheckBox x:Name="cbLastName"
                                                  Margin="15,0,0,0"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  Content="Tên"
                                                  IsChecked="{Binding SearchOption, ConverterParameter={x:Static local:SearchOptions.LastName}, Converter={StaticResource enumToBoolConverter}, UpdateSourceTrigger=PropertyChanged}" />
                                        <CheckBox x:Name="cbCompany"
                                                  Margin="15,0,0,0"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  Content="Công ty"
                                                  IsChecked="{Binding SearchOption, ConverterParameter={x:Static local:SearchOptions.Company}, Converter={StaticResource enumToBoolConverter}, UpdateSourceTrigger=PropertyChanged}" />
                                        <CheckBox x:Name="cbGroup"
                                                  Margin="15,0,0,0"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  Content="Nhóm"
                                                  IsChecked="{Binding SearchOption, ConverterParameter={x:Static local:SearchOptions.Group}, Converter={StaticResource enumToBoolConverter}, UpdateSourceTrigger=PropertyChanged}" />
                                        <CheckBox x:Name="cbEmail"
                                                  Margin="15,0,0,0"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  Content="Email"
                                                  IsChecked="{Binding SearchOption, ConverterParameter={x:Static local:SearchOptions.Email}, Converter={StaticResource enumToBoolConverter}, UpdateSourceTrigger=PropertyChanged}" />
                                        <CheckBox x:Name="cbPhone"
                                                  Margin="15,0,0,0"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  Content="Số ĐT"
                                                  IsChecked="{Binding SearchOption, ConverterParameter={x:Static local:SearchOptions.Phone}, Converter={StaticResource enumToBoolConverter}, UpdateSourceTrigger=PropertyChanged}" />
                                        <TextBlock Margin="10,0,0,0"
                                                   Foreground="#FFFDFF00"
                                                   Text="{Binding SearchAlert}"
                                                   TextWrapping="Wrap" />
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </GroupBox>
                        <dataGridControl:DataGridControl x:Name="dtgrdVendorDirectory"
                                                         Command="{Binding LoadStepCommand}"
                                                         Grid.Row="1"
                                                         Margin="10,10.1,0,10"
                                                         AutoGenerateColumns="False"
                                                         behavior:DoubleClickCommandBehavior.DoubleClickCommand="{Binding DoubleClickViewCommand}"
                                                         behavior:DoubleClickCommandBehavior.DoubleClickCommandParameter="{Binding SelectedItem, ElementName=dtgrdVendorDirectory}"
                                                         CanUserAddRows="False"
                                                         DataFilterResult="{Binding FilterEmployeeCollection, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"
                                                         DisplayItems="{Binding NumberOfDisplayItems}"
                                                         IsColunmHidden="True"
                                                         IsFilterDataColunm="False"
                                                         IsPaging="False"
                                                         IsReadOnly="True"
                                                         IsRollBackData="False"
                                                         ItemsSource="{Binding VendorCollection}"
                                                         NumberOfItems="{Binding VendorCollection.Count}"
                                                         RowStyle="{DynamicResource DataGridToggleRowStyle}"
                                                         SelectionMode="Extended"
                                                         Style="{DynamicResource DatagridWithRowHeader}">
                            <dataGridControl:DataGridControl.ContextMenu>
                                <ContextMenu Tag="{Binding PlacementTarget, RelativeSource={RelativeSource Mode=Self}}">
                                    <MenuItem Header="Tạo mới"
                                              Command="{Binding NewCommand}">
                                        <MenuItem.Icon>
                                            <Rectangle Width="16"
                                                       Height="16"
                                                       Fill="{DynamicResource NewItem}"
                                                       Stretch="Fill" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="Chỉnh sửa"
                                              Command="{Binding EditCommand}"
                                              CommandParameter="{Binding Tag, RelativeSource={RelativeSource AncestorType=ContextMenu, Mode=FindAncestor}}">
                                        <MenuItem.Icon>
                                            <Rectangle Width="16"
                                                       Height="16"
                                                       Fill="{DynamicResource EditItem}"
                                                       Stretch="Fill" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="Xóa"
                                              Command="{Binding DeletesCommand}"
                                              CommandParameter="{Binding Tag, RelativeSource={RelativeSource AncestorType=ContextMenu, Mode=FindAncestor}}"
                                              IsEnabled="{Binding ., Converter={StaticResource permissionConverter}, ConverterParameter=PO100-01-04}">
                                        <MenuItem.Icon>
                                            <Rectangle Width="16"
                                                       Height="16"
                                                       Fill="{DynamicResource DeleteItem}"
                                                       Stretch="Fill" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="Sao chép/Tạo bản sao"
                                              Command="{Binding DuplicateCommand}"
                                              CommandParameter="{Binding Tag, RelativeSource={RelativeSource AncestorType=ContextMenu, Mode=FindAncestor}}">
                                        <MenuItem.Icon>
                                            <Rectangle Width="16"
                                                       Height="16"
                                                       Fill="{DynamicResource DuplicateItem}"
                                                       Stretch="Fill" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="Sáp nhập"
                                              Command="{Binding MergeItemCommand}"
                                              CommandParameter="{Binding Tag, RelativeSource={RelativeSource AncestorType=ContextMenu, Mode=FindAncestor}}"
                                              IsEnabled="{Binding ., Converter={StaticResource permissionConverter}, ConverterParameter=PO100-01-03}">
                                        <MenuItem.Icon>
                                            <Rectangle Width="16"
                                                       Height="16"
                                                       Fill="{DynamicResource MergeItem}"
                                                       Stretch="Fill" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="Đơn mua hàng"
                                              Command="{Binding PurchaseOrderCommand}"
                                              CommandParameter="{Binding Tag.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu, Mode=FindAncestor}}"
                                              IsEnabled="{Binding ., Converter={StaticResource permissionConverter}, ConverterParameter=PO100-02-02}">
                                        <MenuItem.Icon>
                                            <Rectangle Width="16"
                                                       Height="16"
                                                       Fill="{DynamicResource PurchaseOrder}"
                                                       Stretch="Fill" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </ContextMenu>
                            </dataGridControl:DataGridControl.ContextMenu>
                            <dataGridControl:DataGridControl.Columns>
                                <DataGridTextColumn Header="Mã"
                                                    Binding="{Binding GuestNo, Mode=OneWay}"
                                                    Width="85" />
                                <DataGridTextColumn Header="Trạng thái"
                                                    Binding="{Binding IsActived, ConverterParameter=Status, Converter={StaticResource comboxItemToTextConverter}, Mode=OneWay}"
                                                    Width="100" />
                                <DataGridTextColumn Header="Công ty"
                                                    Binding="{Binding Company, Mode=OneWay}"
                                                    Width="150" />
                                <DataGridTextColumn Header="Họ"
                                                    Binding="{Binding FirstName, Mode=OneWay}"
                                                    Width="150" />
                                <DataGridTextColumn Header="Tên"
                                                    Binding="{Binding LastName, Mode=OneWay}"
                                                    Width="150" />
                                <DataGridTextColumn Header="Nhóm"
                                                    Binding="{Binding GroupName, Mode=OneWay}"
                                                    Width="150" />
                                <DataGridTextColumn Header="Thành Phố"
                                                    Binding="{Binding AddressModel.City, Mode=OneWay}"
                                                    Width="150" />
                                <DataGridTextColumn Header="Quốc Gia"
                                                    Binding="{Binding AddressModel.CountryId, ConverterParameter=Country, Converter={StaticResource comboxItemToTextConverter}, Mode=OneWay}"
                                                    Width="150" />
                                <DataGridTextColumn Header="Số ĐT"
                                                    Binding="{Binding Phone1, ConverterParameter=Phone, Converter={StaticResource stringFormatConverter}, Mode=OneWay}"
                                                    Width="120" />
                                <DataGridTextColumn Header="ĐTDĐ"
                                                    Binding="{Binding CellPhone, ConverterParameter=Phone, Converter={StaticResource stringFormatConverter}, Mode=OneWay}"
                                                    Width="120" />
                                <DataGridTextColumn Header="Email"
                                                    Binding="{Binding Email, Mode=OneWay}"
                                                    Width="200" />
                                <DataGridTextColumn Header="Website"
                                                    Binding="{Binding Website, Mode=OneWay}"
                                                    Width="200" />
                                <DataGridTextColumn Binding="{Binding Custom1}"
                                                    Width="100">
                                    <DataGridTextColumn.Visibility>
                                        <Binding Path="Data[0].IsShow"
                                                 Mode="OneWay"
                                                 UpdateSourceTrigger="PropertyChanged"
                                                 Source="{StaticResource customFieldBindingHelper}">
                                            <Binding.Converter>
                                                <converter:BoolToVisibilityConverter FalseToVisibility="Collapsed" />
                                            </Binding.Converter>
                                        </Binding>
                                    </DataGridTextColumn.Visibility>
                                    <DataGridTextColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock Tag="{Binding Path=Data[0].IsShow, Source={StaticResource customFieldBindingHelper}, Mode=OneWay}"
                                                       Text="{Binding Path=Data[0].Label, Source={StaticResource customFieldBindingHelper}, Mode=OneWay}" />

                                        </DataTemplate>
                                    </DataGridTextColumn.HeaderTemplate>
                                </DataGridTextColumn>
                                <DataGridTextColumn Binding="{Binding Custom2}"
                                                    Width="100">
                                    <DataGridTextColumn.Visibility>
                                        <Binding Path="Data[1].IsShow"
                                                 Mode="OneWay"
                                                 UpdateSourceTrigger="PropertyChanged"
                                                 Source="{StaticResource customFieldBindingHelper}">
                                            <Binding.Converter>
                                                <converter:BoolToVisibilityConverter FalseToVisibility="Collapsed" />
                                            </Binding.Converter>
                                        </Binding>
                                    </DataGridTextColumn.Visibility>
                                    <DataGridTextColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock Tag="{Binding Path=Data[1].IsShow, Source={StaticResource customFieldBindingHelper}, Mode=OneWay}"
                                                       Text="{Binding Path=Data[1].Label, Source={StaticResource customFieldBindingHelper}, Mode=OneWay}" />
                                        </DataTemplate>
                                    </DataGridTextColumn.HeaderTemplate>
                                </DataGridTextColumn>
                                <DataGridTextColumn Binding="{Binding Custom3}"
                                                    Width="100">
                                    <DataGridTextColumn.Visibility>
                                        <Binding Path="Data[2].IsShow"
                                                 Mode="OneWay"
                                                 UpdateSourceTrigger="PropertyChanged"
                                                 Source="{StaticResource customFieldBindingHelper}">
                                            <Binding.Converter>
                                                <converter:BoolToVisibilityConverter FalseToVisibility="Collapsed" />
                                            </Binding.Converter>
                                        </Binding>
                                    </DataGridTextColumn.Visibility>
                                    <DataGridTextColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock Tag="{Binding Path=Data[2].IsShow, Source={StaticResource customFieldBindingHelper}, Mode=OneWay}"
                                                       Text="{Binding Path=Data[2].Label, Source={StaticResource customFieldBindingHelper}, Mode=OneWay}" />
                                        </DataTemplate>
                                    </DataGridTextColumn.HeaderTemplate>
                                </DataGridTextColumn>
                                <DataGridTextColumn Binding="{Binding Custom4}"
                                                    Width="100">
                                    <DataGridTextColumn.Visibility>
                                        <Binding Path="Data[3].IsShow"
                                                 Mode="OneWay"
                                                 UpdateSourceTrigger="PropertyChanged"
                                                 Source="{StaticResource customFieldBindingHelper}">
                                            <Binding.Converter>
                                                <converter:BoolToVisibilityConverter FalseToVisibility="Collapsed" />
                                            </Binding.Converter>
                                        </Binding>
                                    </DataGridTextColumn.Visibility>
                                    <DataGridTextColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock Tag="{Binding Path=Data[3].IsShow, Source={StaticResource customFieldBindingHelper}, Mode=OneWay}"
                                                       Text="{Binding Path=Data[3].Label, Source={StaticResource customFieldBindingHelper}, Mode=OneWay}" />
                                        </DataTemplate>
                                    </DataGridTextColumn.HeaderTemplate>
                                </DataGridTextColumn>
                                <DataGridTextColumn Binding="{Binding Custom5}"
                                                    Width="100">
                                    <DataGridTextColumn.Visibility>
                                        <Binding Path="Data[4].IsShow"
                                                 Mode="OneWay"
                                                 UpdateSourceTrigger="PropertyChanged"
                                                 Source="{StaticResource customFieldBindingHelper}">
                                            <Binding.Converter>

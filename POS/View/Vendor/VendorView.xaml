                                                                   Text="{Binding RegularPrice, Mode=OneWay, StringFormat=c}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </dataGridControl:DataGridControl.Columns>
                                    </dataGridControl:DataGridControl>
                                </Grid>
                            </TabItem>
                            <TabItem x:Name="tabitemPOHistory"
                                     Header="Lịch sử đặt mua hàng">
                                <TabItem.Visibility>
                                    <Binding Path="SelectedVendor.IsNew"
                                             Mode="OneWay">
                                        <Binding.Converter>
                                            <converter:BoolToVisibilityConverter FalseToVisibility="Visible" />
                                        </Binding.Converter>
                                    </Binding>
                                </TabItem.Visibility>
                                <Grid x:Name="grdContentPOHistory">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition />
                                        <RowDefinition Height="25" />
                                        <RowDefinition Height="5" />
                                    </Grid.RowDefinitions>
                                    <dataGridControl:DataGridControl x:Name="dtgrdPOHistory"
                                                                     Grid.Row="1"
                                                                     Margin="5,5,5,0"
                                                                     AutoGenerateColumns="False"
                                                                     CanUserAddRows="False"
                                                                     IsPaging="False"
                                                                     IsReadOnly="True"
                                                                     IsRollBackData="False"
                                                                     ItemsSource="{Binding SelectedVendor.PurchaseOrderCollection}"
                                                                     Style="{DynamicResource DatagridWithRowHeader}"
                                                                     VisibilityNavigationBar="Collapsed">
                                        <dataGridControl:DataGridControl.Columns>
                                            <DataGridTextColumn Header="Mã"
                                                                Binding="{Binding PurchaseOrderNo, Mode=OneWay}"
                                                                Width="85" />
                                            <DataGridTemplateColumn Header="Ngày mua hàng"
                                                                    Width="70"
                                                                    SortMemberPath="PurchasedDate">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock HorizontalAlignment="Center"
                                                                   Text="{Binding PurchasedDate, Mode=OneWay, StringFormat={x:Static local:Define.DateFormat}}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTextColumn Header="Trạng thái"
                                                                Binding="{Binding Status, ConverterParameter=PurchaseStatus, Converter={StaticResource comboxItemToTextConverter}, Mode=OneWay}"
                                                                Width="100" />
                                            <DataGridTemplateColumn Header="Tổng"
                                                                    Width="*"
                                                                    SortMemberPath="Total">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock HorizontalAlignment="Right"
                                                                   Text="{Binding Total, Mode=OneWay, StringFormat={x:Static local:Define.CurrencyFormat}, ConverterCulture={x:Static local:Define.ConverterCulture}}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="Đã trả"
                                                                    Width="*"
                                                                    SortMemberPath="Paid">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock HorizontalAlignment="Right"
                                                                   Text="{Binding Paid, Mode=OneWay, StringFormat={x:Static local:Define.CurrencyFormat}, ConverterCulture={x:Static local:Define.ConverterCulture}}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="Còn lại"
                                                                    Width="*"
                                                                    SortMemberPath="Balance">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock HorizontalAlignment="Right"
                                                                   Text="{Binding Balance, Mode=OneWay, StringFormat={x:Static local:Define.CurrencyFormat}, ConverterCulture={x:Static local:Define.ConverterCulture}}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </dataGridControl:DataGridControl.Columns>
                                    </dataGridControl:DataGridControl>
                                    <Grid x:Name="grdDatagridBottomPOHistory"
                                          Grid.Row="2"
                                          Height="25"
                                          Margin="5,0"
                                          VerticalAlignment="Bottom"
                                          d:LayoutOverrides="GridBox">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="16" />
                                            <ColumnDefinition Width="80" />
                                            <ColumnDefinition Width="70" />
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="18" />
                                        </Grid.ColumnDefinitions>
                                        <Border x:Name="brdPOHistoryBackground"
                                                Grid.ColumnSpan="8"
                                                Background="{DynamicResource DatagridBottomBackground}"
                                                BorderBrush="{DynamicResource DatagridBottomBorder}"
                                                BorderThickness="1,0,1,1"
                                                d:LayoutOverrides="GridBox" />
                                        <TextBlock x:Name="txtblBindingTotal"
                                                   Grid.Column="4"
                                                   Margin="0,0,3,0"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"
                                                   Style="{DynamicResource TextBlockDatagridBottomTotal}"
                                                   Text="{Binding TotalPurchaseOrder.Total, Mode=OneWay, StringFormat={x:Static local:Define.CurrencyFormat}, ConverterCulture={x:Static local:Define.ConverterCulture}}"
                                                   TextWrapping="NoWrap" />
                                        <TextBlock x:Name="txtblBindingPaid"
                                                   Grid.Column="5"
                                                   Margin="0,0,3,0"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"
                                                   Style="{DynamicResource TextBlockDatagridBottomTotal}"
                                                   Text="{Binding TotalPurchaseOrder.Paid, Mode=OneWay, StringFormat={x:Static local:Define.CurrencyFormat}, ConverterCulture={x:Static local:Define.ConverterCulture}}"
                                                   TextWrapping="NoWrap" />
                                        <TextBlock x:Name="txtblBindingBalance"
                                                   Grid.Column="6"
                                                   Margin="0,0,3,0"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"
                                                   Style="{DynamicResource TextBlockDatagridBottomTotal}"
                                                   Text="{Binding TotalPurchaseOrder.Balance, Mode=OneWay, StringFormat={x:Static local:Define.CurrencyFormat}, ConverterCulture={x:Static local:Define.ConverterCulture}}"
                                                   TextWrapping="NoWrap" />
                                    </Grid>
                                </Grid>
                            </TabItem>
                        </cpcTabControl:CPCTabControl>
                    </Grid>
                </Grid>
            </Grid>
        </control:BusyIndicator>
    </Grid>
</UserControl>